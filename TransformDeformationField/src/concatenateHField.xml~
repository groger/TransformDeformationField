<parameters>
  <label>Transform Parameters</label>
  <description>Parameters used to transform the input image into the output image</description>
     <string-vector>
	<name>deffieldtoconcatenate</name>
	<label>Set the two Deformation Field Volumes to concatenate</label>
	<channel>input</channel>
	<longflag>--concatenate</longflag>
	<default></default>
     </string-vector>
    <string-vector>
	<name>deffieldtoaverage</name>
	<label>Deformation Field Volumes to average with the first deformation field</label>
	<channel>input</channel>
	<longflag>--average</longflag>
	<default></default>
     </string-vector>
     <string-vector>
	 <name>typeOfField</name>
	 <label>Set if the deformation field is an -Field in the same order as you enter your deformation fields to average or to concatenate</label>
	 <channel>input</channel>
	 <longflag>--hfieldtype</longflag>
	 <default></default>
     </string-vector>
</parameters>
<parameters>
    <label>Advanced Transform Parameters</label>
    <description>Those parameters should normally not be modified</description>
    <image type="vector">
        <name>outputHfield</name>
        <label>Save concatenation of transforms</label>
        <channel>output</channel>
        <longflag>--outputHField</longflag>
